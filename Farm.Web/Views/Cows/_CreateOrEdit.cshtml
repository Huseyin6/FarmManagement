@model CowsViewModel
@Html.AntiForgeryToken()
<h2 >Cow Add</h2>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.EaringNo, new { @class = "col-lg-3 col-xl-2 control-label " })
            <div class="col-md-6">
                <div class="form-line">
                    @Html.EditorFor(m => m.EaringNo, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            @*@Html.ValidationMessageFor(m => m.EaringNo, "", new { @class = "text-danger" })*@
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Name, new { @class = "col-lg-3 col-xl-2 control-label " })
            <div class="col-md-6">
                <div class="form-line">
                    @Html.EditorFor(m => m.Name, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BirthDate, new { @class = "col-lg-3 col-xl-2 control-label " })
            <div class="col-md-4" style="margin-top:5px">
                @Html.EditorFor(m => m.BirthDate)
                @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.StateId, new { @class = "col-lg-3 col-xl-2 control-label " })
            <div class="col-md-4">
                @Html.DropDownListFor(m => m.StateId, Model.StateSelectList, new { @class = "col-lg-3 col-xl-2 " })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.IsPregnant, new { @class = "col-lg-3 col-xl-2 control-label" })
            <div class="col-md-4" style="margin-bottom:10px;margin-top:5px">
                @Html.CheckBoxFor(m => m.IsPregnant, new { @class = "switch" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.IsLactation, new { @class = "col-lg-3 col-xl-2 control-label" })
            <div class="col-md-4">
                @Html.CheckBoxFor(m => m.IsLactation, new { @class = "switch" })
            </div>
        </div>
        <div class="form-group" style="margin-top:10px">
            <div class="col-md-12">
                <div class="modal-footer">
                    @Html.SaveButtons(Url.Action("Index", "Cows"))
                    @Html.CancelButton(Url.Action("Index", "Cows"))
                </div>
            </div>
        </div>
    </div>
</div>