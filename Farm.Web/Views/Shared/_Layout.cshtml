                                    <li>
                                        <a href="@Url.Action("Index","Cows",new {state=3 })">Ölenler</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a href="javascript:void(0);" class="menu-toggle">
                                    <span>Düveler</span>
                                </a>
