<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=Edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <title>Welcome To Farm Management Project</title>
    <!-- Favicon-->
    <link rel="icon" href="~/Content/favicon.ico" type="image/x-icon">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,700&subset=latin,cyrillic-ext" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>

    <!-- Bootstrap Core Css -->
    <link href="~/Content/bootstrap/css/bootstrap.css" rel="stylesheet">
    <link href="~/Content/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet" />
    <!-- BootstrapSwitch  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.4/css/bootstrap2/bootstrap-switch.min.css" />
    <!-- FontAwesome-->
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <!-- JQuery DataTable Css -->
    <link href="~/Content/jquery-datatable/skin/bootstrap/css/dataTables.bootstrap.min.css" rel="stylesheet">

    <!--Bootstrap Datepicker-->
    <link href="~/Content/bootstrap-datepicker/css/bootstrap-datepicker.min.css" rel="stylesheet" />

    <!-- Waves Effect Css -->
    <link href="~/Content/node-waves/waves.css" rel="stylesheet" />

    <!-- Animation Css -->
    <link href="~/Content/animate-css/animate.css" rel="stylesheet" />

    <!-- Morris Chart Css-->
    <link href="~/Content/morrisjs/morris.css" rel="stylesheet" />

    <!-- Custom Css -->
    <link href="~/Content/style.css" rel="stylesheet">
    <link href="~/Content/Site.css" rel="stylesheet">

    <!-- AdminBSB Themes. You can choose a theme from css/themes instead of get all themes -->
    <link href="~/Content/all-themes.css" rel="stylesheet" />

    <!-- Jquery Core Js -->
    <script src="~/Content/jquery/jquery.min.js"></script>
</head>

<body class="theme-deep-purple">
    <!-- Page Loader -->
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="preloader">
                <div class="spinner-layer pl-red">
                    <div class="circle-clipper left">
                        <div class="circle"></div>
                    </div>
                    <div class="circle-clipper right">
                        <div class="circle"></div>
                    </div>
                </div>
            </div>
            <p>Please wait...</p>
        </div>
    </div>
    <!-- #END# Page Loader -->
    <!-- Overlay For Sidebars -->
    <div class="overlay"></div>
    <!-- #END# Overlay For Sidebars -->
    <!-- Top Bar -->
    <nav class="navbar">
        <div class="container-fluid">
            <div class="navbar-header">
                <a href="javascript:void(0);" class="bars"></a>
                @Html.ActionLink("Farm Management", "Index", "Home", new { @class = "navbar-brand" })
            </div>
        </div>
    </nav>
    <!-- #Top Bar -->
    <section>
        <!-- Left Sidebar -->
        <aside id="leftsidebar" class="sidebar">
            <!-- User Info -->
            <div class="user-info">
                <div class="image">
                    <img src="~/Content/images/user.png" width="48" height="48" alt="User" /> @* Resim veritabanında kayıtlı olacak. kullanıcı profil resmi. *@
                </div>
                <div class="info-container">
                    <div class="name" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Huseyin</div>
                    <div class="email">huseyin.simsek@example.com</div> @* Mail'de veritabanında olacak. kullanıcı tablosunda tutulacak. *@
                    <div class="btn-group user-helper-dropdown">
                        <i class="material-icons" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">keyboard_arrow_down</i>
                        <ul class="dropdown-menu pull-right">
                            <li><a href="@Url.Action("Index","Profile")"><i class="material-icons">person</i>Profil</a></li>
                            <li role="separator" class="divider"></li>
                            <li><a href="javascript:void(0);"><i class="material-icons">input</i>Çıkış</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <!-- #User Info -->
            <!-- Menu -->
            <div class="menu">
                <ul class="list">
                    <li class="header">FİNANSAL İŞLEMLER</li>
                    <li class="active">
                        <a href="@Url.Action("Index","Home")">
                            <i class="material-icons" style="color:#FF6347">home</i>
                            <span style="color:#FF6347">Home</span>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle" style="color:#1E90FF">
                            <i class="material-icons">trending_up</i>
                            <span style="color:#1E90FF">Gelir</span>
                        </a>

                        <ul class="ml-menu">
                            <li>
                                <a href="@Url.Action("Table","Income")" style="color:#1E90FF">Tablo</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Statistic","Income")" style="color:#1E90FF">İstatistik</a>
                            </li>
                        </ul>
                    </li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle" style="color:#DC143C">
                            <i class="material-icons">trending_down</i>
                            <span style="color:#DC143C">Gider</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="@Url.Action("Table","Expense")" style="color:#DC143C">Tablo</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Statistic","Expense")" style="color:#DC143C">İstatistik</a>
                            </li>
                        </ul>
                    </li>
                    <li class="header">YÖNETİMSEL İŞLEMLER</li>
                    <li>
                        <a href="javascript:void(0);" class="menu-toggle">
                            <i class="material-icons">settings</i>
                            <span>Hayvan Yönetimi</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a href="@Url.Action("Index","Cows")">İnek</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Calves")">Buzağı</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Heifers")">Düve</a>
                            </li>
                            <li>
                                <a href="@Url.Action("Index","Steers")">Dana</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div class="copyright">
                    &copy; @DateTime.Now.Year <a href="javascript:void(0);"></a>
                </div>
                <div class="version">
                    <p>Template: AdminBsb</p>
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
    </section>

    <section class="content">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>

    <!-- Bootstrap Core Js -->
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/bootstrap-select/js/bootstrap-select.min.js"></script>


    <!-- Slimscroll Plugin Js -->
    <script src="~/Content/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/Content/node-waves/waves.js"></script>

    <!-- Jquery DataTable Plugin Js -->
    <script src="~/Content/jquery-datatable/jquery.dataTables.js"></script>
    <script src="~/Content/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>

    <!-- Jquery CountTo Plugin Js -->
    <script src="~/Content/jquery-countto/jquery.countTo.js"></script>

    <!-- Morris Plugin Js -->
    <script src="~/Content/raphael/raphael.min.js"></script>

    <!-- ChartJs -->
    <script src="~/Content/chartjs/Chart.bundle.js"></script>


    <script src="~/Content/momentjs/moment.js"></script>
    
    <!-- Bootstrap Datepicker-->
    <script src="~/Content/bootstrap-datepicker/js/bootstrap-datepicker.min.js"></script>

    <script src="~/Content/bootstrap-datepicker/locales/bootstrap-datepicker.tr.min.js"></script>
    <!-- Sparkline Chart Plugin Js -->
    <script src="~/Content/jquery-sparkline/jquery.sparkline.js"></script>
    <script src="~/Content/bootstrap-confirmation.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-switch/3.3.4/js/bootstrap-switch.min.js"></script>
    <!-- Custom Js -->
    <script src="~/Content/js/admin.js"></script>
    <script src="~/Content/jquery-datatable/table/jquery-datatable.js"></script>
    <script src="~/Content/js/pages/ui/modals.js"></script>
    <script src="~/Content/js/pages/forms/basic-form-elements.js"></script>
    <script src="~/Content/js/pages/index.js"></script>

</body>
</html>