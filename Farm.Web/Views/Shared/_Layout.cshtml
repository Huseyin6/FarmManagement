            <!-- #Menu -->
            <!-- Footer -->
            <div class="legal">
                <div>
                    <p>Github: <strong><a href="https://github.com/Huseyin6" target="_blank">@@Huseyin6</a></strong> </p>
                </div>
                <div class="copyright">
                    <p>Template: <strong>AdminBsb &copy; @DateTime.Now.Year</strong> </p>
                </div>
            </div>
            <!-- #Footer -->
        </aside>
        <!-- #END# Left Sidebar -->
    </section>

    <section class="content" style="margin-top:25px">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </section>

    <!-- Bootstrap Core Js -->
    <script src="~/Content/bootstrap/js/bootstrap.js"></script>
    <script src="~/Content/bootstrap-select/js/bootstrap-select.min.js"></script>


    <!-- Slimscroll Plugin Js -->
    <script src="~/Content/jquery-slimscroll/jquery.slimscroll.js"></script>

    <!-- Waves Effect Plugin Js -->
    <script src="~/Content/node-waves/waves.js"></script>

    <!-- Jquery DataTable Plugin Js -->
    <script src="~/Content/jquery-datatable/jquery.dataTables.js"></script>
    <script src="~/Content/jquery-datatable/skin/bootstrap/js/dataTables.bootstrap.js"></script>

    <!-- ChartJs -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.8.0/Chart.bundle.min.js"></script>

