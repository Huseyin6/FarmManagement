                                    <li>
                                        <a href="@Url.Action("Index","Steers",new {state=2 })">Satılanlar</a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("Index","Steers",new {state=3 })">Ölenler</a>
                                    </li>
                                </ul>
                            </li>
