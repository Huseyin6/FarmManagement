@model CalvesViewModel
@Html.AntiForgeryToken()
<h2 class="page-header">Calf Add</h2>
<div class="panel panel-default">
    <div class="panel-body">
        <div class="form-group">
            @Html.LabelFor(m => m.EaringNo, new { @class = "col-lg-3 col-xl-2 control-label " })
            <div class="col-md-4">
                @Html.EditorFor(m => m.EaringNo, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EaringNo, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group ">
            @Html.LabelFor(m => m.Name, new { @class = "col-lg-3 col-xl-2 control-label" })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Name)
                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.BirthDate, new { @class = "col-lg-3 col-xl-2 control-label " })
            <div class="col-md-4">
                @Html.EditorFor(m => m.BirthDate)
                @Html.ValidationMessageFor(m => m.BirthDate, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.DrinkMilk, new { @class = "col-lg-3 col-xl-2 control-label" })
            <div class="col-md-4" style="margin-bottom:10px;margin-top:5px">
                @Html.CheckBoxFor(m => m.DrinkMilk, new { @class = "switch" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Sex, new { @class = "col-lg-3 col-xl-2 control-label " })
            <div class="col-md-4">
                @Html.EditorFor(m => m.Sex)
                @Html.ValidationMessageFor(m => m.Sex, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-4 ">
                <button class="btn btn-primary">Kaydet</button>
            </div>
        </div>
    </div>
</div>